<%= div_for comment do %>
    <p>
      <strong> <%= comment.comment_name %> posted <%= time_ago_in_words(comment.created_at) %> ago</strong> <br />
      <%= h(comment.body) %>
       <strong> <%= link_to 'Delete'</strong>, {:action=>"destroy", :controller=>"comments", :tutorial_id=> comment.tutorial_id, :id=> comment.id}, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
    <% end %>

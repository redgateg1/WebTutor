<h1>Listing tutorials</h1>

<table>
  <tr>
    <th>Tutorial name</th>
    <th>Tutorial type</th>
    <th>Tutorial date release</th>
    
    <th>Tutorial discription</th>
    <th>Tutorial path</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tutorials.each do |tutorial| %>
  <tr>
    <td><%= tutorial.tutorial_name %></td>
    <td><%= tutorial.TutorialType %></td>
    <td><%= tutorial.tutorial_date_release %></td>
   
    <td><%= tutorial.tutorial_discription %></td>
    <td><%= tutorial.avatar %></td>
    <td><%= tutorial.CategoryID %></td>
    <td><%= link_to 'Show', tutorial %></td>
    <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
    <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

